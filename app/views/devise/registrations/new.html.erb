<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<fieldset>
    <div id="legend">
      <legend class="">Register</legend>
    </div>
    <div class="control-group">
      <!-- Username -->
      <%= f.label :username, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :username, class: 'input-xlarge' %>
        <p class="help-block">Username can contain any letters or numbers, without spaces</p>
      </div>
    </div>

    <div class="control-group">
      <!-- E-mail -->
      <%= f.label :email, class: 'control-label' %>
      <div class="controls">
        <%= f.email_field :email, class: 'input-xlargel' %>
        <p class="help-block">Please provide your E-mail</p>
      </div>
    </div>

    <div class="control-group">
      <!-- Password-->
      <label class="control-label" for="password">Password</label>
      <div class="controls">
        <%= f.password_field :password, class: 'input-xlarge' %>
        <p class="help-block">Password should be at least <%= @minimum_password_length %> characters</p>
      </div>
    </div>

    <div class="control-group">
      <!-- Password -->
      <label class="control-label"  for="password_confirm">Password (Confirm)</label>
      <div class="controls">
        <%= f.password_field :password_confirmation, class: 'input-xlarge' %>
        <p class="help-block">Please confirm password</p>
      </div>
    </div>

    <div class="control-group">
      <!-- Button -->
      <div class="controls">
        <%= f.submit 'Register', class: 'btn btn-success' %>
      </div>
    </div>
  </fieldset>
<% end %>
<%= render "devise/shared/links" %>
